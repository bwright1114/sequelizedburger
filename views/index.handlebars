<div class="container">
  <div class="row">
    <div class="col s12 center-align">
      <h1 class="center-align text-warning">Eat Da Burger</h1>
      <img class="center-align" id="logo" src="/assets/img/burger.png"></img>
      <h5 class="center-align">Please Insert Burger Request Below</h5> 
      <form method="POST" action="/" class="button-size text-center">
        <textarea type="text" name="burger_name" data-error="wrong" data-success="right" required></textarea>
        <br>
        <button class="waves-effect waves-light btn" type="submit">Order the Burger</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m6 burger-col">
      <ul class="collection with-header">
        <li class="collection-header center-align">
          <h5>Eat</h5></li>
        {{!-- This Handlebars code says, take each burger received from the get query, and display it here UNLESS devoured==true --}} 
        {{#each burgers}} {{#unless this.devoured}}
        <li class="collection-item avatar">
          <img src="/assets/img/burger.png" alt="" class="circle">
          <span class="title">
            {{this.id}}. {{this.burger_name}}</span>
          <br>
          <form action="/{{this.id}}?_method=PUT" method="POST">
            {{!-- Here's a hidden form and button that will be added to each burger--}}
            <input type="hidden" name="id" value="{{this.devoured}}">
            <br>
            <button class="waves-effect waves-light btn-floating btn-large secondary-content yellow darken-1" type="submit">EAT</button>
          </form>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col s12 m6 burger-col">
      <ul class="collection with-header">
        <li class="collection-header center-align">
          <h5>Devoured</h5></li>
        {{!-- This Handlebars code says, "Display all the burgers for which devoured==true"--}} 
        {{#each burgers}} {{#if this.devoured}}
        <li class="collection-item avatar">
          <span class="title grey-text text-darken-1">
           
              {{this.id}}. {{this.burger_name}}
          
          </span> {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>